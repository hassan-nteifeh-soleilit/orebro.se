<div class="or-collapse-button or-colorbg">
  <div class="or-icon-area">
   <span class="or-icon-plus"></span>
  </div>   
</div>
<div class="or-collapsible-header or-js-collapsible-header">
	<div class="plusboxxrubrik">$!contentName</div>
</div>


<script type="text/javascript">
(function() {  
   /* Case insensitive :contains */
   $svjq.expr[':'].contains = function(a, i, m) {
      return $svjq(a).text().toUpperCase()
      .indexOf(m[3].toUpperCase()) >= 0;
   };
   
  var header = $svjq('#svid${contentId} .or-js-collapsible-header, #svid${contentId} .or-collapse-button');   
  $svjq(header).click(function(e) {
    $svjq('#svid${contentId} .or-plus-box-content').slideToggle(200);     
  }); 
   
})();	 

$svjq( document ).ready(function() {
   $svjq("#svid${contentId} .or-plus-box-content").hide();
   #if($query!="")   
   	$svjq("#svid${contentId} .or-plus-box-content:contains('${query}')").show(); 
   	if($svjq("#svid${contentId} .or-collapsible-header:contains('${query}')").length > 0) {
         $svjq("#svid${contentId} .or-plus-box-content").show();
      }
   #end
});   
</script>
